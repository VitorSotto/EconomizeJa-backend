// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  name     String
  email    String
  password String

  carts Cart[]

  role String @default("USER")

  createdAt DateTime @default(now())
  deletedAt DateTime
}

model Cart {
  id String @id

  products Products[]

  createdAt DateTime @default(now())
  createdBy User     @relation(fields: [userId], references: [id])
  userId    String
}

model Products {
  id String @id

  name     String
  supplier String?
  market   String
  image    String
  price    Prices  @relation(fields: [priceId], references: [id])
  priceId  String  @unique

  cart Cart[]
}

model Prices {
  id        String    @id
  category  String
  price     Decimal
  updatedAt DateTime
  product   Products?
  productId String    @unique
}
