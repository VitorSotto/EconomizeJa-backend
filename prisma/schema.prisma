// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  name     String
  email    String
  password String

  carts cart[]

  role String @default("USER")

  createdAt DateTime @default(now())
  deletedAt DateTime
}

model cart {
  id String @id

  produtos produtos[]

  createdAt   DateTime @default(now())
  userCreator User     @relation(fields: [userId], references: [id])
  userId      String
}

model produtos {
  Id_produto String @id

  Nome       String
  Fornecedor String?
  Mercado    String
  Imagem     String
  Id_preco   precos?

  cart   cart?   @relation(fields: [cartId], references: [id])
  cartId String?
}

model precos {
  Id_preco   String   @id
  Categoria  String
  Preco      Decimal
  Data       DateTime
  produto    produtos @relation(fields: [Id_produto], references: [Id_produto])
  Id_produto String   @unique
}
